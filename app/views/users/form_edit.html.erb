<%= form_for(@user, :html => {:class => 'form'},url: "/update_user?id="+@user.id.to_s, :method => :POST) do |f| %>
  <div class="row header" style="background-color: #1f4bae">
     <h1 class="center-align col-lg-12 text-center"><b>Editar Usuario</b></h1>
  </div>
  <%= text_field_tag :user_id, @user.id , hidden: true  %>
 <div class="row " style="margin-top: 30px">
  <div class="col-lg-3 col-md-3 col-sm-2 col-xs-1 text-center"></div>
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-10 text-center">
          <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-12 col-xs-12">         
           <div class="input-group2">
            <%= f.label :nombre, "Nombre y Apellido" %><br><br>
            <%= f.text_field :nombre, value: @user.nombre , class: "form-control"%>
           </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-12 col-xs-12">         
           <div class="input-group2">
            <%= f.label :email, "Correo Electrónico"%><br><br>
            <%= f.email_field :email, value: @user.email , class: "form-control", disabled: true%>
           </div>
          </div>
        </div>
      </div>
      <%= text_field_tag :decision, "true", hidden: true  %>
      <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-12 col-xs-12">         
           <div class="input-group2">
            <%= f.label :username, "Usuario" %><br><br>
            <%= f.text_field :username, class: "form-control", disabled: true %>
           </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-12 col-xs-12">         
            <div class="input-group2">
              <%= f.label :role_id, "Rol" %>
              <br>
              <br>
              <%= select_tag "role_id", options_for_select(@roles.order('id').collect{ |u| [u.descripcion, u.id]}, @user.role_id),class: "selectpicker form-control", 'data-live-search'=>"true", "title"=>"Seleccione un Rol" %>
               </div>
          </div>
        </div>
      </div>
       <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-12 col-xs-12">         
           <div class="input-group2">
            <%= f.label :password, "Contraseña" %><br><br>
            <%= f.password_field :password,  value: @user.password , class: "form-control"%>
           </div>
          </div>
        </div>
      </div>
          <div class="row" style="margin-bottom: 60px;">
        <div class="form-group col-md-6 col-xs-6 col-sm-6" style="margin-top: 30px;">
          <%= link_to users_path, class: "btn btn-warning", style:"width: 100px;" do %>
            <span class="fa fa-reply"></span> Atras    
          <% end %>
        </div>
        <div class="form-group col-md-6 col-xs-6 col-sm-6" style="margin-top: 30px;">
          <%= button_to "", class: "btn btn-primary ", style:"width: 100px;" do %>
            <span class="fa fa-floppy-o"></span> Guardar    
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-2 col-xs-1 text-center"></div>
  </div>
<% end %>