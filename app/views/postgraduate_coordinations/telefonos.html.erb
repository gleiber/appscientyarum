

<div class="row z-depth-2" style="margin-top:20px;">


<div class="col-md-10 col-md-offset-1 table-responsive col-sm-12 col-xs-12" >
<div class="row header" style="background-color: #1f4bae;">
<h1 class="center-align col-lg-12 text-center"><b> Telefonos </b></h1>
</div>
<div class="text-center">
<%= link_to new_phone_path, {class:"btn btn-success", style: "margin: 25px auto;" } do%>
<i class="fa fa-plus" aria-hidden="true"></i> Registrar Telefono 
<%end %>
</div>
<table id="tabla_vp" class="table table-hover text-center" style="margin-top: 12px">
<thead>
<tr>
  <th class="text-center">Numero</th>
  <th class="text-center" colspan="3">Accion</th>
</tr>
</thead>
<tbody class="searchable">
<% @phones.each do |phone| %>
<tr>
<td><%= phone.numero %></td>

<td><%= link_to edit_phone_path(phone)  ,class: "btn btn-info" do %>
<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
<% end %>

</tr>
<% end %>
</tbody>
</table>
</div>
</div>

