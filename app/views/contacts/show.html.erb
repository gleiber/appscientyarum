<div class="form">

<div class="row header" style="background-color: #1f4bae">
<h1 class="center-align col-lg-12 text-center"><b> Contacto </b></h1>
</div>

<div class="row" style="margin-top: 30px">

<div class="form-group">
<div class="col-md-6 col-sm-6 col-xs-12 first" style="margin-top: 30px">
<div class="input-group2">
<%= text_field_tag :nombre, @contact.nombre, {readonly: true, class: "form-control2"} %>
<%= label_tag :nombre, "Nombre" %><br>
</div>
</div> 
</div>

<div class="form-group">
<div class="col-md-6 col-sm-6 col-xs-12" style="margin-top: 30px">
<div class="input-group2">
<%= text_field_tag :email,@contact.email, {readonly: true, class: "form-control2"} %>
<%= label_tag :email, "Correo" %><br>
</div>
</div> 
</div>

<div class="form-group">
<div class="col-md-12 col-sm-12 col-xs-12" style="margin-top: 30px">
<div class="input-group2" style="width: 90%">
<%= text_area_tag :descripcion, @contact.descripcion, {readonly: true, class: "form-control2"} %>
<%= label_tag :descripcion, "Mensaje" %><br>
</div>
</div> 
</div>


</div>



<div class="row" style="margin-top: 50px;">


<div class="form-group">
<div class="col-md-6 col-sm-6 col-xs-12" >
<div class="input-group2">
<%= link_to contacts_path, class: "btn btn-warning", style:"width: 100px;" do %>
<span class="fa fa-reply"></span> Atras    
<% end %>
</div>
</div>
</div> 



</div>

</div>
<br><br>