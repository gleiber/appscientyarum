<p id="notice"><%= notice %></p>

<h1>Offer Users</h1>
<%= form_for(@offer_user) do |f| %>
  <% if @offer_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer_user.errors.count, "error") %> prohibited this offer_user from being saved:</h2>

      <ul>
      <% @offer_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row form-group" style="margin-top:40px">
    <div class="col-md-6 col-md-offset-2" align="center">
      <%= f.label :offer_id, "Oferta" %><br/>
      <%= f.collection_select :offer_id, Offer.order(:titulo), :id, :titulo, include_blank: true, class: "form-control" %></select>
    </div>  
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<table id="table_offer_user" class="table table-bordered text-center">
  <thead>
    <tr>
      <th>Offer</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @offer_users.each do |offer_user| %>
      <tr>
        <td><%= offer_user.offer %></td>
        <td><%= offer_user.user %></td>
        <td><%= link_to 'Show', offer_user %></td>
        <td><%= link_to 'Edit', edit_offer_user_path(offer_user) %></td>
        <td><%= link_to 'Destroy', offer_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

