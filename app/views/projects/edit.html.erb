            <br>
           
            <%= select_tag "tutor_id", options_for_select(@users1.collect { |u| [u.nombre, u.id] }, @project.tutor), :class =>"selectpicker form-control", 'data-live-search' => "true", :title => "Seleccione un Tutor"  %>
