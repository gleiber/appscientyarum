<%= form_for(@role_funcion) do |f| %>
  <% if @role_funcion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role_funcion.errors.count, "error") %> prohibited this role_funcion from being saved:</h2>

      <ul>
      <% @role_funcion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row header" style="background-color: #1f4bae">
     <h1 class="center-align col-lg-12 text-center"><b> Nueva Cohorte </b></h1>
  </div>
  <div class="row container" style="margin-top: 30px">
    <div class="col-md-12 text-center">
      <div class="row">
        <div class="form-group">
           <div class="col-md-6 col-sm-6 col-xs-12">         
           <div class="input-group2">
           <%= f.label :role_id, "Rol" %>
           <br>
           <br>
           <%= select_tag "role_id", options_for_select(@roles.collect{ |u| [u.descripcion, u.id]}),class: "selectpicker form-control", 'data-live-search'=>"true", "title"=>"Seleccione un Rol" %>
           </div>
           </div>
        </div>
      </div>
      <br><br>
      <div class="row " >
        <h1 class="center-align col-lg-12 text-center"><b>Opciones del Menu</b></h1>
      </div>
      <br><br>
      <div class="row">
        <% @funcions.each do |funcion| %>
          <div class="col-md-4 text-left" id="idRecaudos">
            <%= check_box_tag "funcions[]", funcion.id %> <%= funcion.descripcion %>
          </div>
        <% end %>
      </div>
      <div class="row" style="margin-bottom: 60px;">
        <div class="form-group col-md-2 col-md-offset-2" style="margin-top: 30px;">
          <%= link_to users_path, class: "btn btn-warning", style:"width: 100px;" do %>
            <span class="fa fa-reply"></span> Atras    
          <% end %>
        </div>
        <div class="form-group col-md-2 col-md-offset-3" style="margin-top: 30px;">
          <%= button_to "", class: "btn btn-primary ", style:"width: 100px;" do %>
            <span class="fa fa-floppy-o"></span> Guardar    
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<style type="text/css">
  .container {
    width: 100% !important;
}
</style>