            <br>
            <%= f.select "coordinador", options_for_select(@users1.collect { |u| [u.nombre, u.id] }, @eva_comm_proj.coordinador), {}, {:class => "selectpicker form-control", 'data-live-search' => "true", :title => "Coordinador"} %>
          </div>
        </div>

      </div>


      <div class="form-group">
        <div class="col-md-8 col-sm-6 col-xs-12 first">
