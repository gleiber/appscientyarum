      <% if @postulate.errors.any? %>
           <div class="row">
            <div class="col-md-offset-2 col-sm-6 col-xs-12 ">
              <div class="alert alert-danger">
                <div class="card-content white-text">
                  <span class="card-title">Errores:</span>
                  <% @postulate.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      <%end%>

     <%= form_for(@postulate,:html => {:class => 'form'}) do |f| %> 

     <%= f.text_field :id, hidden: true  %>
     <%= text_field_tag :d, "sdfd", hidden: true  %>


     <div class="row header" style="background-color: #1f4bae">
     <h1 class="center-align col-lg-12 text-center"><b> Información de la Postulación </b></h1>
     </div>
    
     <div class="row" style="margin-top: 30px">


     <div class="form-group">
     <div class="col-md-12 col-sm-12 col-xs-12">
     <div class="input-group2" style="width: 90%">
     <%= f.text_field :nombre, value: @postulate.offer.titulo , class: "form-control2", disabled: true %>
     <%= f.label :nombre, "Oferta" %><br>
     </div>
     </div> 
     </div>



     <div class="form-group">
     <div class="col-md-12 col-sm-12 col-xs-12">        
     <div class="input-group2" style="width: 90%">
     <%= f.text_field :nombre, value: @postulate.offer.program.titulo , class: "form-control2", disabled: true %>
     <%= f.label :nombre, "Programa" %><br><br>
     </div>
     </div>
     </div>



     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12" >
     <div class="input-group2">
     <%= f.text_field :nombre, value: @postulate.nombre, class: "form-control2", disabled: true %>
     <%= f.label :nombre, "Postulado" %><br>
     </div>
     </div>
     </div>

     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12">
     <div class="input-group2">
     <%= f.text_field :nombre, value: @postulate.cedula, class: "form-control2", disabled: true %>
     <%= f.label :nombre, "Cedula" %><br>
     </div>
     </div> 
     </div>

     </div>

     <div class="row">

     
     <h1 class="center-align col-lg-12 text-center"><b>Decisión de Postulación</b></h1>
     <div class="form-group">
     <div class="col-md-12 col-sm-12 col-xs-12 text-center" >
     <div class="input-group2">
     <%= select_tag :decision, options_for_select([["Aprobado", "aprobado"], ["Rechazado", "rechazado"]]), class: "selectpicker", "title"=>"Seleccione su Decisión" %>
     </div>
     </div> 
     </div>

     </div>

      
     <div class="row" style="margin-top: 50px;">
     <div class="form-group">
     <div class="col-md-12 col-sm-12 col-xs-12  text-center" >
     <div class="input-group2">
     <div class="col-md-6 col-sm-6 col-xs-6" >
     <%= link_to postulates_path, class: "btn btn-warning", style:"width: 100px;" do %>
     <span class="fa fa-reply"></span> Atras    
     <% end %>
     </div>
     <div class="col-md-6 col-sm-6 col-xs-6" >
     <%= button_to "", class: "btn btn-primary ", style:"width: 100px;" do %>
     <span class="fa fa-floppy-o"></span> Guardar    
     <% end %>
     </div>
     </div>
     </div> 
     </div> 

     <% end %>
    


    