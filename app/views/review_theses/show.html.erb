
<% if notice %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue">
          <div class="card-content white-text">
            <span class="card-title">Noticia</span>
            <p id="notice"><%= notice %></p>
          </div>
        </div>
      </div>
    </div>
<%end%>



<div class="row z-depth-2" style="margin-top:20px;">


  <div class="col-md-10 col-md-offset-1 table-responsive col-sm-12 col-xs-12" >
    <div class="row header" style="background-color: #1f4bae;">
      <h1 class="center-align col-lg-12 text-center"><b> Evaluaciones de Tesis/TEG </b></h1>
    </div>
    <div class="form-group">
          <div class="col-md-12 col-sm-12 col-xs-12 first" style="padding-top: 25px" >
            <div class="input-group2">
             
              <%= text_field_tag :titulo, @thesis.titulo , class: "form-control2", disabled: true %>
               <%= label :nombre, "Titulo de Tesis/TEG" %><br>
            </div>
          </div>
        </div>
   
    <table id="tabla_vp" class="table table-hover text-center" style="padding-top: 25px">
      <thead>
      <tr>
        <th class="text-center">Tipo de Revision</th>
        <th class="text-center">Descripcion</th>
  
      </tr>
      </thead>
      <tbody class="searchable">
      <% @review_theses.each do |review_thesis| %>
         <tr>
            <td><%= review_thesis.type_review.descripcion %></td>
            <td><%= review_thesis.descripcion %></td>    
         </tr>
      
      <% end %>
      </tbody>
    </table>
    <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
      <div class="col-md-2 col-md-offset-5" >
        <%= link_to review_theses_path, class: "btn btn-warning", style:"width: 100px;" do %>
            <span class="fa fa-reply"></span> Atras
        <% end %>
      </div>
      
    </div>

  </div>
</div>




<script type="text/javascript">
  $('#filter').keyup(function () {

    var rex = new RegExp($(this).val(), 'i');
    $('.searchable tr').hide();
    $('.searchable tr').filter(function () {
      return rex.test($(this).text());
    }).show();

  });
</script>
<style type="text/css">
  form{
    background-color:transparent !important;
    box-shadow: none !important;
  }
</style>



