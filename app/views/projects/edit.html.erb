      </div>


      


      <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-6 col-xs-12 col-md-offset-0">
            <div class="input-group2">
             <%= f.label :titulo, "Areas Interes" %>
              <br>
              <br>
              <div id="area_interes_project">
              </div>
            </div>
          </div>
        </div>
      </div>


    <div class="row" style="margin-bottom: 30px; margin-top: 40px; " >
