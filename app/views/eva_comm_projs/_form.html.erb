            <br>
            <%= f.select "principal_1", options_for_select(@users1.collect { |u| [u.nombre, u.id] }, @eva_comm_proj.principal_1), {}, {:class => "selectpicker form-control", 'data-live-search' => "true", :title => "Seleccione evaluador principal 1"} %>

          </div>
        </div>

        <div class="col-md-4 col-sm-6 col-xs-12 first">
          <div class="input-group2">
            <%= f.label :coordinador, " Coordinador" %>
