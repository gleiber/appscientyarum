<%= form_for(certificate,:html => {:class => 'form'}) do |f| %>
<% if certificate.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(certificate.errors.count, "error") %></h2>

  <ul>
    <% certificate.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row header" style="background-color: #1f4bae;"">
 <h1 class="center-align col-lg-12 text-center"><b>Editar Estado de Constancia</b></h1>
</div>

<div class="row " style="margin-top: 30px">
  <div class="col-lg-2 col-md-2 text-center first"></div>
  <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 text-center">
   <div class="row">
    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">   
     <div class="input-group2" style="width: 90%">
       <%= f.text_field :type_certificate_id, value: certificate.type_certificate.descripcion, class: "form-control2", disabled: true %>
       <%= f.label :type_certificate_id, "Tipo de Constancia:" %>
     </div>
   </div>
 </div>

 <div class="row" style="margin-bottom: 60px;">
  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">      
   <div class="input-group2">
     <%= f.label :type_status_certificate_id, "Estado:" %>
     <br>
     <br>
     <%= select_tag :type_status_certificate_id , options_for_select(@type_status_certificates.collect{ |u| [u.descripcion, u.id]}, certificate.type_status_certificate_id), 'data-live-search'=>"true", class: "selectpicker", "title"=>"Seleccione un Estado" %>
   </div>
 </div>
</div>

<div class="row" style="margin-bottom: 60px;">
  <div class="form-group col-md-6 col-xs-6 col-sm-6" style="margin-top: 30px;">
    <%= link_to certificates_path, class: "btn btn-warning", style:"width: 100px;" do %>
    <span class="fa fa-reply"></span> Atras    
    <% end %>
  </div>
  <div class="form-group col-md-6 col-xs-6 col-sm-6" style="margin-top: 30px;">
    <%= button_to "", class: "btn btn-primary ", style:"width: 100px;" do %>
    <span class="fa fa-floppy-o"></span> Guardar
    <% end %>
  </div>
</div>


</div>
<div class="col-lg-2 col-md-2 text-center"></div>
</div>

<% end %>

