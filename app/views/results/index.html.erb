<% if notice %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue">
          <div class="card-content white-text">
            <span class="card-title">Noticia</span>
            <p id="notice"><%= notice %></p>
          </div>
        </div>
      </div>
    </div>
  <%end%>

    <div class="row z-depth-2" style="margin-top:20px;">


    <div class="col-md-10 col-md-offset-1 table-responsive col-sm-12 col-xs-12" >
     <div class="row header" style="background-color: #1f4bae;">
     <h1 class="center-align col-lg-12 text-center"><b> Resultados de Tesis/TEG </b></h1>
     </div>
     <div class="text-center">
    <%= link_to 'Registrar Resultados', new_result_path, {class:"btn btn-success", style: "margin: 25px auto;" }%>
    </div>
        <table id="tabla_vp" class="table table-hover text-center">
          <thead>
            <tr>
              <th class="text-center">Nombre Tesis/TEG</th>
              <th class="text-center">Descripcion</th>
              <th class="text-center">Veredicto</th>
              <th colspan="3" class="text-center">Accion</th>
            </tr>
          </thead>
          <tbody class="searchable">
            <% @results.each do |result| %>
              <tr>
                <td><%= result.thesis_id %></td>
                <td><%= result.descripcion %></td>
                <td><%= link_to result,class: "btn btn-primary" do %>
                      <i class="fa fa-search" aria-hidden="true"></i>   
                    <% end %>
                </td>
                <td><%= link_to edit_result_path(result),class: "btn btn-info" do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>   
                    <% end %>
                </td>
                <td><%= button_to result, method: :delete, remote: true, class: "btn btn-warning", data: { confirm: 'Are you sure?'}, style:"margin-top: -50px;" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

<style type="text/css">
  form{
    background-color:transparent !important; 
    box-shadow: none !important;
  }
</style>
