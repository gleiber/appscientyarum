
<div class="row z-depth-2" style="margin-top:20px;">


    <div class="col-md-10 col-md-offset-1 table-responsive col-sm-12 col-xs-12" >
     <div class="row header" style="background-color: #1f4bae;">
     <h1 class="center-align col-lg-12 text-center"><b> Postulaciones </b></h1>
     </div>
     <div class="text-center">   


    </div>
       <table class="table table-hover text-center" style="margin-top:20px;">
  <thead>
    <tr>
      <th class="text-center" >Oferta</th>
      <th class="text-center" >Programa</th>
      <th class="text-center" >Nombre del Postulado</th>
      <th colspan="3" class="text-center" >Acci√≥n</th>
    </tr>
  </thead>

  <tbody>
   <% if (@postulates) %>
    <% @postulates.each do |postulate| %>
     <% if (postulate.decision == nil) %> 
      <tr>
        <td><%= postulate.offer.titulo %></td>
        <td><%= postulate.offer.program.titulo %></td>
        <td><%= postulate.nombre %></td>
        <td><%= link_to  '/chequeo?'+ {:postulate=> postulate}.to_param, class:"btn  btn-info" do%><i class="fa fa-check"></i> Chequeo de Recaudos
                  <% end %>

          
        </td>
        <td><%= link_to  '/admision?'+ {:postulate=> postulate}.to_param ,class:"btn  btn-primary" do %>
        <span class="fa fa-user-plus"></span> Admision
                  <% end %>

          
        </td>
      </tr>
       <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>
      </div>


<div class="col-md-1">
    <button type="button" class="btn btn-success btn-ayuda" data-toggle="modal" data-target="#modalAyuda"><i class="fa fa-question-circle-o fa-2x"></i> </button>
  
</div>



    </div>



<div id="modalAyuda" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center"><img src="/images/logo_sc_peq.png"> Ayuda Scientiarum</h4>
      </div>
      <div class="modal-body">
        <img src="/images/ayudapostulacion.jpg">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>

  </div>
</div>



<script type="text/javascript">
  $('#filter').keyup(function () {

            var rex = new RegExp($(this).val(), 'i');
            $('.searchable tr').hide();
            $('.searchable tr').filter(function () {
                return rex.test($(this).text());
            }).show();

        });






</script>