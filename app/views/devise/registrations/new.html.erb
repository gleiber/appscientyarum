

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>

     <div class="row header" style="background-color: #1f4bae">
     <h1 class="center-align col-lg-12 text-center"><i class="fa fa-cloud"></i><b> Registrar Usuario </b><i class="fa fa-cloud"></i></h1>
     </div>
     <div class="row" style="margin-top: 30px">

     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12 first" >
     <div class="input-group2">
     <%= f.text_field :username,class: "form-control2"%>
     <%= f.label :nombre_de_usuario%><br>
     </div>
     </div>
     </div>

     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12" >
     <div class="input-group2">
     
     <%= f.password_field :password, {autocomplete: "off", class: "form-control2"} %>
     <%= f.label :password %><br>
     </div>
     </div>
     </div>

     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12" >
     <div class="input-group2">
     <%= f.email_field :email, class: "form-control2"%>
     <%= f.label :correo_electronico%><br>
     </div>
     </div>
     </div>

     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12" >
     <div class="input-group2">
     <%= f.file_field :avatar, 'data-buttonText' => 'Your label here'%>
     </div>
     </div>
     </div>

     <div class="form-group">
     <div class="col-md-6 col-sm-6 col-xs-12" >
     <div class="input-group2">
     <%= f.submit "Guardar", class: "btn btn-primary" %>
     </div>
     </div>
     </div>

     </div>

     <% end %>




   



