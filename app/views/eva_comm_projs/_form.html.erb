    <div class="row" style="margin-top: 30px">
      <div class="row" style="margin-top: 30px">


    <div class="row">
        <div class="form-group">
          <div class="col-md-12 col-sm-6 col-xs-12 first" >
            <div class="input-group2">
              <%= f.label :nombre, "Titulo de Proyecto" %><br><br>
