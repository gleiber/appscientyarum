<link href="../css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
<%= form_for(@coh_per_sub_u) do |f| %>
  <% if @coh_per_sub_u.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@coh_per_sub_u.errors.count, "error") %> prohibited this coh_per_sub_u from being saved:</h2>

      <ul>
      <% @coh_per_sub_u.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row" style="margin-top:80px">
    <div class="input-field col s12 l4 offset-l2">
      <i class="material-icons prefix blue-text">accessibility</i>
      <%= f.text_field :title, autofocus: true, class:"blue-text" %>
      <%= f.label :title, "Titulo del Evento", class:"blue-text"%>
    </div>
  </div>
  <div class="row" style="margin-top:80px">
    <div class="input-field col s12 l8 offset-l2">
      <i class="material-icons prefix blue-text">accessibility</i>
      <%= f.text_area :description, class:"blue-text materialize-textarea" %>
      <%= f.label :description, "Descripcion", class:"blue-text" %>
    </div>
  </div>
  <div class="row" style="margin-top:80px">
    <div class="col l2 offset-l2">
      <label class="blue-text">Fecha Inicio:</label>
      <div class="col-md-3 col-md-offset-2">
        <label for="dtp_input2" class="">Fecha de Finalizacion de Oferta</label>
        <div class="input-group date form_date" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
          <%= text_field_tag "fecha_start", value = nil, readonly: true %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
        </div>
        <input type="hidden" id="dtp_input2" value="" /><br/>
      </div>
    </div>
    <div class="col l2">
      <label class="blue-text">Hora Inicio:</label>
      <div class="col-md-3 col-md-offset-2">
        <label for="dtp_input2" class="">Fecha de Finalizacion de Oferta</label>
        <div class="input-group date form_time" data-link-field="dtp_input2" ddata-date="" data-date-format="hh:ii">
          <%= text_field_tag "hora_start", value = nil, readonly: true %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
        </div>
        <input type="hidden" id="dtp_input2" value="" /><br/>
      </div>
    </div>
    <div class="col l2 offset-l1">
      <label class="blue-text">Fecha Culminacion:</label>
      <div class="col-md-3 col-md-offset-2">
        <label for="dtp_input2" class="">Fecha de Finalizacion de Oferta</label>
        <div class="input-group date form_date" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
          <%= text_field_tag "fecha_end", value = nil, readonly: true %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
        </div>
        <input type="hidden" id="dtp_input2" value="" /><br/>
      </div>
    </div>
    <div class="col l2">
      <label class="blue-text">Hora Final:</label>
      <div class="col-md-3 col-md-offset-2">
        <label for="dtp_input2" class="">Fecha de Finalizacion de Oferta</label>
        <div class="input-group date form_time" data-link-field="dtp_input2" data-date="" data-date-format="hh:ii">
          <%= text_field_tag "hora_end", value = nil, readonly: true %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
        </div>
        <input type="hidden" id="dtp_input2" value="" /><br/>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :subject_user_id %><br>
    <%= f.text_field :subject_user_id %>
  </div>
  <div class="field">
    <%= f.label :cohort_period_id %><br>
    <%= f.text_field :cohort_period_id %>
  </div>
  <div class="field">
    <%= f.label :schedule_cohort_period_id %><br>
    <%= f.text_field :schedule_cohort_period_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script type="text/javascript" src="./jquery/jquery-1.8.3.min.js" charset="UTF-8"></script>
<script type="text/javascript" src="./bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript" src="../js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript" src="../js/locales/bootstrap-datetimepicker.es.js" charset="UTF-8"></script>

<script type="text/javascript">
  $('.form_date').datetimepicker({
        language:  'es',
        weekStart: 1,
        todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    minView: 2,
    forceParse: 0,
        format: 'dd-mm-yyyy'
    });
