<div class="row header" style="background-color: #1f4bae">
     <h1 class="center-align col-lg-12 text-center"><b> Asignacidassfon de Recursos</b></h1>
</div>
<div class="container" style="margin-top:100px">
	<div class="row container">
		<div class="col-md-5 col-sm-6 col-md-offset-2 col-xs-12 first">         
			<div class="">
			<%= label_tag :program_id, "Ofertas de Programas" %>
			<br><br>
			<%= select_tag "offer_id", options_for_select(@offers.collect{ |u| [u.titulo, u.id]}), class: "selectpicker form-control", 'data-live-search'=>"true", 'title'=>"Seleccione una Oferta"%>
