




<div class="row z-depth-2" style="margin-top:20px;">


  <div class="col-md-10 col-md-offset-1 table-responsive col-sm-12 col-xs-12" >
    <div class="row header" style="background-color: #1f4bae;">
      <h1 class="center-align col-lg-12 text-center"><b>  Comision Evaluadora </b></h1>
    </div>
    <div class="form-group">
      <div class="col-md-12 col-sm-6 col-xs-12 first" >
        <div class="input-group2">
          <%= label :nombre, "Titulo de Proyecto" %><br><br>
          <%= text_field_tag :titulo, @project.titulo , class: "form-control2", disabled: true %>
        </div>
      </div>
    </div>
   
    <table id="tabla_vp" class="table table-hover text-center">
      <thead>
        <tr>
          <th class="text-center">Principal 1</th>
          <th class="text-center">Principal 2</th>
          <th class="text-center">Principal 3</th>
          <th class="text-center">Suplente 1</th>
           <th class="text-center">Coordinador</th>
         
        </tr>
      </thead>
      <tbody class="searchable">
         <tr>
         <td>
              <% principal_1 = User.find(@eva_comm_proj.principal_1) %>
              <%= principal_1.nombre %>
         </td>
         <td>
              <% principal_2 = User.find(@eva_comm_proj.principal_2) %>
              <%= principal_2.nombre %>
         </td>
         <td>
              <% principal_3 = User.find(@eva_comm_proj.principal_3) %>
              <%= principal_3.nombre %>
         </td>
         
         <td>
              <% suplente_1 = User.find(@eva_comm_proj.principal_1) %>
              <%= suplente_1.nombre %>
         </td>
          <td>
              <% coordinador = User.find(@eva_comm_proj.coordinador) %>
              <%= coordinador.nombre %>
         </td>
         
            


         </tr>
      </tbody>
    </table>
   

    <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
      <div class="col-md-2 col-md-offset-4" >
        <%= link_to eva_comm_projs_path, class: "btn btn-warning", style:"width: 100px;" do %>
            <span class="fa fa-reply"></span> Atras
        <% end %>
      </div>
      <div class="col-md-2 col-md-offset-1" >
        <%= link_to edit_eva_comm_proj_path, class: "btn btn-info", style:"width: 100px;" do %>
            <span class="fa fa-edit"></span> Editar
        <% end %>
      </div>
      
    </div>

  </div>
</div>




<script type="text/javascript">
  $('#filter').keyup(function () {

    var rex = new RegExp($(this).val(), 'i');
    $('.searchable tr').hide();
    $('.searchable tr').filter(function () {
      return rex.test($(this).text());
    }).show();

  });
</script>

<style type="text/css">
  form{
    background-color:transparent !important;
    box-shadow: none !important;
  }
</style>