
 <% if @period.errors.any? %>
    <div class="row">
            <div class="col-md-offset-2 col-sm-6 col-xs-12 ">
              <div class="alert alert-danger">
                <div class="card-content white-text">
                  <span class="card-title">Errores:</span>
                  <% @period.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      <%end%>
 <%= form_for(@period,  :html => {:class => 'form'}) do |f| %>

     <div class="row header" style="background-color: #1f4bae;"">
     <h1 class="center-align col-lg-12 text-center"><b> Editar Periodo </b></h1>
     </div>

<div class="container" style=" margin-top: 50px;">
    <br><br>
     <div class="row ">
     <div class="col-md-4 form-group" >
    <div class="input-group2">
     <%= f.label :fecha_desde, "Fecha Inicio" %><br><br>
     <%= select_tag :fecha_desde, options_for_select(["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"], @period.fecha_desde), class: "selectpicker form-control", 'data-live-search'=>"true", "title"=>"Seleccione un Inicio"%>
     </div>
     </div>
     <div class="col-md-4 form-group" >
     <div class="input-group2">
     <%= f.label :fecha_hasta, "Fecha Final" %><br><br>
     <%= select_tag :fecha_hasta, options_for_select(["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"], @period.fecha_hasta), class: "selectpicker form-control", 'data-live-search'=>"true", "title"=>"Seleccione un Fin" %>
     </div>
     </div>
     </div>
    <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
      <div class="col-md-2 col-md-offset-2" >
        <%= link_to periods_path, class: "btn btn-warning", style:"width: 100px;" do %>
          <span class="fa fa-reply"></span> Atras    
        <% end %>
      </div>
      <div class="col-md-2 col-md-offset-1" >
        <%= button_to "", class: "btn btn-primary" do %>
       <span class="fa fa-floppy-o"></span> Guardar 
      <% end %>
      </div>
      </div>
    </div>

     <% end %>