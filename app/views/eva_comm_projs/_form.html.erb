<%= form_for(@eva_comm_proj, :html => {:style => 'width: 80%'}, url: {action: @eva_comm_proj.project.nil? ? "create" : "update", params: {id: @eva_comm_proj.project_id}}) do |f| %>

    

 

    <div class="row header" style="background-color: #1f4bae">
      <h1 class="center-align col-lg-12 text-center"><i class=""></i><b> Asignar comisi√≥n evaluadora</b><i class=""></i>
      </h1>
